                                        <label for="firstname">First Name</label>
                                        <input name="firstname" class="form-control ${firstnameValid }" id="firstname" type="text" placeholder="Enter first name" value="<%=user == null ? '' : user.firstname%>"/>
    									<errors name="firstname" class="invalid-feedback" />
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div>
                                        <label for="lastname">Last Name</label>
                                        <input class="form-control ${lastnameValid }" name="lastname" id="lastname" type="text" placeholder="Enter last name" value="<%=user == null ? '' :user.lastname%>"/>
                                        <errors name="lastname" class="invalid-feedback" />
                                    </div>
                                </div>
                            </div>
                            <div class="row align-items-center">
                                <div class="col-md-6 mb-3">
                                    <label for="birthday">Date of Birth</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <svg class="icon icon-xs" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
                                        </span>
                                        <input type="text" value="<%=user == null ? '' :user.birthday%>" class="form-control ${birthdayValid }" name="birthday" id="birthday" placeholder="Enter date of birth" data-input="data-input"/>                                    
                                     	<errors name="birthday" class="invalid-feedback" />
                                     </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="gender">Gender</label>
                                    <select class="form-select mb-0 ${genderValid }" id="gender" name="gender" aria-label="Gender select example">
                                        <option value="" <%=user == null ? '' : user.gender == null ? 'selected' : '' %> >...</option>
                                       	<option value="0" <%=user == null ? '' : user.gender == '0' ? 'selected' : '' %> >Male</option>
                                       	<option value="1" <%=user == null ? '' : user.gender == '1' ? 'selected' : '' %> >Female</option>
                                    </select>
                                    <errors name="gender" class="invalid-feedback" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        <input class="form-control ${emailValid }" value="<%=user == null ? '' :user.email%>" name="email" id="email" type="email" placeholder="name@company.com" />
                                    	<errors name="email" class="invalid-feedback" />
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        <label for="phone">Phone</label>
                                        <input class="form-control ${phoneValid }" value="<%=user == null ? '' :user.phone%>" name="phone" id="phone" type="text" placeholder="Enter phone" />
                                    	<errors name="phone" class="invalid-feedback" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        <label for="address">Address</label>
                                        <input class="form-control" value="<%=user == null ? '' :user.address%>" name="address" id="address" type="text" placeholder="Enter address" />
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="gender">Role</label>
                                    <select class="form-select mb-0 ${genderValid }" id="gender" name="roleId" aria-label="Gender select example">
                                        <option value="" <%-user == null ? '' :user.roles.length == 0 ? 'selected' : '' %> >...</option>
                                       	<option value="1" <%-user == null ? '' :user.roles.length == 0 ? '' : user.roles[0].id == '1' ? 'selected' : '' %> >MANAGER</option>
                                       	<option value="2" <%-user == null ? '' :user.roles.length == 0 ? '' : user.roles[0].id == '2' ? 'selected' : '' %> >ADMIN_WORD</option>
                                        <option value="3" <%-user == null ? '' :user.roles.length == 0 ? '' : user.roles[0].id == '3' ? 'selected' : '' %> >ADMIN_SALE</option>
                                        <option value="4" <%-user == null ? '' :user.roles.length == 0 ? '' : user.roles[0].id == '4' ? 'selected' : '' %> >CUSTOMER</option>
                                    </select>
                                    <errors name="gender" class="invalid-feedback" />
                                </div>
                            </div>
                             <div class="mt-3">
                                <button class="btn btn-gray-800 mt-2 animate-up-2" type="submit">Submit</button>
                            </div>
                        
                    </div>
                    <div class ="row <%-type == 'add' ? '' : 'd-none'%> ">
                        <div class="col-12">
                            <div class="card card-body border-0 shadow">
                                <h2 class="h5 mb-4">Account</h2>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <input class="form-control ${usernameValid }" value="" name="username" id="username" type="username" placeholder="Enter username" />
                                    <errors name="username" class="invalid-feedback" />
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input class="form-control ${passwordValid }" value="" name="password" id="password" type="password" placeholder="Enter password" />
                                    <errors name="password" class="invalid-feedback" />
                                </div>
                            </div>
                        </div>
                        </div>
                        </div>
                    
                        </div>
