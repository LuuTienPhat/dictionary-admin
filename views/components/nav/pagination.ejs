<!-- pagination -->
<div class="card-footer px-3 border-0 d-flex flex-column flex-lg-row align-items-center justify-content-between">
    <!-- hiển thị phân trang nếu có trang -->
    <% if(pagination.pages > 0) { %>
    <nav aria-label="Page navigation example">
      <ul class="pagination mb-0">
        <!-- FIRST ITEM -->
        <% if(pagination.current == 1) { %>
        <li class="page-item disabled">
          <a class="page-link" href="<%=originalUrl%>">First</a>
        </li>
        <% } else { %> 
        <li class="page-item">
          <a class="page-link" href="<%=originalUrl%>">First</a>
        </li>
        <% } %>

        <!-- ITEMS  -->
        <% var i = (Number(pagination.current) > 3 ? Number(pagination.current) - 2 : 1) %> <% if(i !== 1) { %>
        <li class="page-item disabled">
          <a class="page-link" href="#">...</a>
        </li>
        <% } %> 
        <% for(; i <= (Number(pagination.current) + 2) && i <= pagination.pages; i++) { %> 
            <% if(i == pagination.current) { %>
                <li class="page-item active">
                <a class="page-link" href="<% if(i == 1) { %><%=originalUrl%><% } else { %><%=originalUrl%>?p=<%= i %><% } %>"> <%= i %> </a>
                </li>
            <% } else { %>
        <li class="page-item">
          <a class="page-link" href="<% if(i == 1) { %><%=originalUrl%><% } else { %><%=originalUrl%>?p=<%= i %><% } %>"> <%= i %> </a>
        </li>
        <% } %> <% if (i == Number(pagination.current) + 2 && i < pagination.pages) { %>
        <li class="page-item disabled">
          <a class="page-link" href="#">...</a>
        </li>
        <% } %> <% } %>

        <!-- LAST ITEM -->
        <% if(pagination.current == pagination.pages) { %> 
        <li class="page-item disabled">
          <a class="page-link" href="#"> Last </a>
        </li>
        <% } else { %>
        <li class="page-item">
          <a class="page-link" href="<%=originalUrl%>?p=<%= pagination.pages %>"> Last </a>
        </li>
        <% } %>
      </ul>
    </nav>
    <% } %>

    <div class="fw-normal small mt-4 mt-lg-0">
		<% if(Number(pagination.current) * Number(pagination.perPage) >= Number(pagination.total)) {%> 
			    Showing<b> <%-  Number(pagination.total) %></b> out of <b>
            <%=pagination.total%></b>

          <% } else { %>

					Showing<b> <%- Number(pagination.current) * Number(pagination.perPage) %></b> out of <b>
            <%=pagination.total%></b>

			<% } %> 
		</div>
  </div>